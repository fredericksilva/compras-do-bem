              .col.s12.m6.l6
                label(for='estado') ESTADO
                select#estados(name='estado')
                  option.corinput(value='') SELECIONAR...
              .col.s12.m6.l6
                label(for='cidade') CIDADE
                select#cidades(name='cidade')
                  option.corinput(value='') SELECIONAR...
            .switch
