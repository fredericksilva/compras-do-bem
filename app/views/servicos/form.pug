      width: 100% !important;
      height: auto;
      border: 5px solid white;
    }
    #carroca img {
      width: calc(25% - 10px) !important;
      height: auto;
      margin: 5px;
      border: 5px solid white;
    }
    .upload-image {
      top: -32px;
      width: 100%;
      margin: 0;
    }
    .upload-image .btn{
      width: 100%;
      padding: 0 30px;
      margin-left: 0 !important;
      border-top: 1px solid gainsboro;
      border-radius: 0 0 5px 5px;
    }
