  section.empresas
    .container
      h1 Atividades Recentes
      .row
        .col.s12.m4.l4
          each up, index in updates
            if (index % 3 === 0)
              // inicio cards
              .s12.m12.l12.col.cards
                .card
                  .card-image.waves-effect.waves-block.waves-light
                    img.activator(src='img/thumbs.jpg')
                  .card-content
                    span.card-title.activator.cardNome
                      | #{up.user.profile.first_name.charAt(0).toUpperCase()}#{up.user.profile.first_name.slice(1)} #{up.user.profile.second_name.charAt(0).toUpperCase()}.
                      i.material-icons.right more_vert
                    if (up.type === 'fotos')
                      span.cardAcao  Adicionou uma foto
                    else if (up.type === 'avaliacao')
                      span.cardAcao  Fez uma avaliação
                    else if (up.type === 'servico')
                      span.cardAcao  Cadastrou um novo negócio
                    p.cardCidade.pink-text.text-lighten-2
                      a(href='/servico/' + up.servico.urlized)= up.servico.title
                  .card-action
                    .row
                      .col.s12.m5.l5
                        i.material-icons.gostei thumb_up
                        |  2 curtidas
                      .col.s12.m7.l7
                        .votacao
                          i.material-icons.yellow-text.text-darken-1 star_rate
                          i.material-icons.yellow-text.text-darken-1 star_rate
                          i.material-icons.yellow-text.text-darken-1 star_rate
                          i.material-icons.yellow-text.text-darken-1 star_rate
                          i.material-icons star_rate
                        .cardVotacao  (12)
                  .card-reveal
                    span.card-title
                      | Card Title
                      i.material-icons.right close
                    p
                      | Here is some more information about this product that is only revealed once clicked on.
              // fim cards
