      - aval_page = 'active'
    else
      - aval_page = ''
    li(class=aval_page)
      a(href='/dash/avaliacoes')
        i.material-icons layers
        |  Avaliações
    - var updates_page
    if (title === 'Updates')
      - updates_page = 'active'
    else
      - updates_page = ''
    li(class=updates_page)
      a(href='/dash/updates')
        i.material-icons storage
        |  Updates